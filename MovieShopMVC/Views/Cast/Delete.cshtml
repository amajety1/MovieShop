@model ApplicationCore.Models.CastModel

@{
    ViewData["Title"] = "Delete Cast";
}

<div class="container mt-4">
    <h2>Delete Cast Member</h2>
    <hr />
    
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this cast member?</h4>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                @if (!string.IsNullOrEmpty(Model.ProfilePath))
                {
                    <img src="@Model.ProfilePath" alt="@Model.Name" class="card-img-top">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                        <span class="text-muted">No Image Available</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>
                
                <dt class="col-sm-3">Gender</dt>
                <dd class="col-sm-9">@Model.Gender</dd>
                
                <dt class="col-sm-3">TMDB URL</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.TmdbUrl))
                    {
                        <a href="@Model.TmdbUrl" target="_blank">@Model.TmdbUrl</a>
                    }
                    else
                    {
                        <span>N/A</span>
                    }
                </dd>
            </dl>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

@model List<ApplicationCore.Models.CastModel>

@{
    ViewData["Title"] = "Cast Members";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Cast Members</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var cast in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(cast.ProfilePath))
                        {
                            <img src="@cast.ProfilePath" class="card-img-top" alt="@cast.Name">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 300px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@cast.Name</h5>
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@cast.Id" class="btn btn-outline-primary">Details</a>
                                <a asp-action="Edit" asp-route-id="@cast.Id" class="btn btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@cast.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No cast members found. <a asp-action="Create">Create a new cast member</a>.
        </div>
    }
</div>

@model List<ApplicationCore.Models.MovieCardModel>

<div class="container mt-4">
    <h2>Movies with this Cast Member</h2>
    <hr />
    
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No movies found for this cast member.
        </div>
    }
    
    <div class="mt-3">
        <a asp-action="Details" asp-route-id="@ViewBag.CastId" class="btn btn-secondary">Back to Cast Details</a>
    </div>
</div>

@model ApplicationCore.Models.MovieDetailsModel

<div class="container mt-5">
    <h2>Edit Movie</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="UpdateMovie" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Tagline" class="form-label">Tagline</label>
                    <input asp-for="Tagline" class="form-control" />
                    <span asp-validation-for="Tagline" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Overview" class="form-label">Overview</label>
                    <textarea asp-for="Overview" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Overview" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="PosterUrl" class="form-label">Poster URL</label>
                    <input asp-for="PosterUrl" class="form-control" />
                    <span asp-validation-for="PosterUrl" class="text-danger"></span>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Budget" class="form-label">Budget</label>
                        <input asp-for="Budget" class="form-control" />
                        <span asp-validation-for="Budget" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Revenue" class="form-label">Revenue</label>
                        <input asp-for="Revenue" class="form-control" />
                        <span asp-validation-for="Revenue" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="MovieDetails" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="@Model.PosterUrl" class="card-img-top" alt="@Model.Title" />
                <div class="card-body">
                    <h5 class="card-title">Current Poster</h5>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

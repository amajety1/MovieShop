@model ApplicationCore.Models.MovieDetailsModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="@Model.PosterUrl" alt="@Model.Title" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Movie Poster</h5>
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.BackdropUrl))
            {
                <div class="card mb-4">
                    <img src="@Model.BackdropUrl" alt="@Model.Title Backdrop" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">Movie Backdrop</h5>
                    </div>
                </div>
            }
            
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">External Links</h5>
                </div>
                <div class="list-group list-group-flush">
                    @if (!string.IsNullOrEmpty(Model.ImdbUrl))
                    {
                        <a href="@Model.ImdbUrl" target="_blank" class="list-group-item list-group-item-action">IMDB <i class="bi bi-box-arrow-up-right"></i></a>
                    }
                    @if (!string.IsNullOrEmpty(Model.TmdbUrl))
                    {
                        <a href="@Model.TmdbUrl" target="_blank" class="list-group-item list-group-item-action">TMDB <i class="bi bi-box-arrow-up-right"></i></a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">@Model.Title</h2>
                </div>
                <div class="card-body">
                    <h5 class="text-muted mb-3">@Model.Tagline</h5>
                    
                    <div class="mb-4">
                        <h5>Overview</h5>
                        <p>@Model.Overview</p>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Movie Details</h5>
                            <ul class="list-group">
                                @if (Model.ReleaseDate.HasValue)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Release Date
                                        <span class="badge bg-primary rounded-pill">@Model.ReleaseDate.Value.ToString("MMM dd, yyyy")</span>
                                    </li>
                                }
                                @if (Model.RunTime.HasValue)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Runtime
                                        <span class="badge bg-primary rounded-pill">@Model.RunTime minutes</span>
                                    </li>
                                }
                                @if (!string.IsNullOrEmpty(Model.OriginalLanguage))
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Original Language
                                        <span class="badge bg-primary rounded-pill">@Model.OriginalLanguage</span>
                                    </li>
                                }
                                @if (Model.Price.HasValue)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        Price
                                        <span class="badge bg-success rounded-pill">@Model.Price.Value.ToString("C")</span>
                                    </li>
                                }
                            </ul>
                        </div>
                        
                        <div class="col-md-6">
                            <h5>Financial</h5>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Budget
                                    <span class="badge bg-secondary rounded-pill">@Model.Budget.ToString("C")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Revenue
                                    <span class="badge bg-secondary rounded-pill">@Model.Revenue.ToString("C")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Profit/Loss
                                    @{
                                        var profitLoss = Model.Revenue - Model.Budget;
                                        var badgeClass = profitLoss >= 0 ? "bg-success" : "bg-danger";
                                    }
                                    <span class="badge @badgeClass rounded-pill">@profitLoss.ToString("C")</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5>Metadata</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Created:</strong> @(Model.CreatedDate?.ToString("MMM dd, yyyy") ?? "N/A")</p>
                                <p><strong>Created By:</strong> @(Model.CreatedBy ?? "N/A")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Updated:</strong> @(Model.UpdatedDate?.ToString("MMM dd, yyyy") ?? "N/A")</p>
                                <p><strong>Updated By:</strong> @(Model.UpdatedBy ?? "N/A")</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="Edit" asp-controller="Movies" asp-route-id="@Model.Id" class="btn btn-primary me-2">Edit</a>
                        <form asp-action="DeleteMovie" asp-controller="Movies" asp-route-id="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this movie?');">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
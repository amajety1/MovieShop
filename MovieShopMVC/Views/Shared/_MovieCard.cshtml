@model ApplicationCore.Models.MovieCardModel

<div class="card mb-4 shadow-sm">
    <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id">
        <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" />
    </a>
    <div class="card-body">
        <h5 class="card-title text-center">
            <a asp-controller="Movies" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                @Model.Title
            </a>
        </h5>
    </div>
</div>
